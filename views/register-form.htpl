 <div class="row  pad-top">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Introduce your information</strong>  
            </div>
            <div class="panel-body">
                <form role="form" action="/index.php" method="post" data-toggle="validator">
                <br/>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></span>
                        <input name="register-name" type="text" class="form-control" placeholder="Your Name" autofocus required />
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        <input name="register-username" type="text" class="form-control" placeholder="Desired Username" required />
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        <input name="register-email" type="email" class="form-control" placeholder="Your Email" required />
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span></span>
                        <input name="register-password" type="password" class="form-control" placeholder="Enter Password" required />
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span></span>
                        <input name="register-password-match" type="password" class="form-control" placeholder="Retype Password" required />
                    </div>
                    <div class="form-group input-group">
                        <div class="g-recaptcha" data-sitekey="6LfoQQsTAAAAAKABwGMenlCI4Kltr7Pu7PuNGDji"></div>
