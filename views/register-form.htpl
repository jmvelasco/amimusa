                    <input name="target" type="hidden" value="register-handler" />
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Register Me</button>
                    <hr />
                    Already Registered ?  <a id="login" href="/?target=login" >Login here</a>
                </form>
            </div>
        </div>
    </div>
</div>