<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>###title###</title>
    <!-- Bootstrap -->
    <link href="/css/bootstrap/css/bootstrap.min.css" rel="stylesheet">

	<link href="/css/main.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href='http://fonts.googleapis.com/css?family=Special+Elite' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Permanent+Marker' rel='stylesheet' type='text/css'>

    <script src='https://www.google.com/recaptcha/api.js'></script>

      <!-- ###extra-js-scripts### -->

  </head>
  <body>
  	<div class="container">
    	###content###
    </div> <!-- /container -->

    <div id="suggestion">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    </div>
    <div id="suggestion-wrapper">
        <div id="suggestion-form">
            <div id="close-suggestion">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            </div>
            <form id="suggestion-formId" method="post">
                <p>Please, send us your feelings about the site.</p>
                <label>Your name:</label><br>
                <input type="text" size="20" name="feedback-sender" id="feedback-sender"><br>

                <label>Comments:</label><br>
                <textarea cols="45" rows="10" name="comments" id="comments"></textarea>

                <div class="g-recaptcha" data-sitekey="6LeOIgsTAAAAAH96eYU8NB6FP3FWz9JhlsHMZbyP"></div>
                <br /> 	<br />
                <input type="hidden" value="send-feedback" name="target">
                <input type="submit" id="send" value="Send">
            </form>
        </div>
    </div>

    <div id="beta">
        <img width="200px" src="../images/beta.gif" alt="beat">
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/css/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $("#suggestion").click(function(){
                $(this).hide();
                $("#close-suggestion").css('top', '-166px');
                $("#suggestion-wrapper").animate({left: 100},600,'swing');
            });
            $("#close-suggestion").click(function(){
                $("#suggestion-wrapper").animate({left: -600},600,'swing', function(){
                    $("#suggestion").show();
                    $("#comments").val('');
                    $("#feedback-sender").val('');
                    $("#suggestion-form").show();
                    $("#alert-message").remove();
                    $("#greetings").remove();
                    grecaptcha.reset();
                });
            });
            $("#suggestion-formId").submit(function() {
                $("#alert-message").remove();
                var comments = $.trim($("#comments").val());
                var feedbackSender = $.trim($("#feedback-sender").val());
                if ('' != comments) {
                    var url = "/index.php?target=send-feedback";
                    $.ajax({
                        type: "POST",
                        url: url,
                        data: {'postData': $("#suggestion-formId").serialize()}
                    }).done(function( msg ) {
                        if ('success' == msg) {
                            $("#suggestion-form").hide();
                            $("#suggestion-wrapper").prepend('<p id="greetings">Thank you&nbsp'+feedbackSender+'</p>');
                            $("#close-suggestion").css('top', '-25px');
                            window.setTimeout(function(){$("#close-suggestion").trigger('click')}, 1600);
                        } else if ('no-captcha' == msg) {
                            $('<span id="alert-message">Please, verify you are a human.</span>').insertAfter($("#suggestion-form"));
                        } else {
                            $('<span id="alert-message">Something went wrong.</span>').insertAfter($("#suggestion-form"));
                        }
                        grecaptcha.reset();
                    })
                } else {
                    $('<span id="alert-message">Please, write something.</span>').insertAfter($("#suggestion-form"));
                    window.setTimeout(function(){$("#alert-message").remove()}, 3600);
                }
                return false;


            });
        });
    </script>

  </body>
</html>
